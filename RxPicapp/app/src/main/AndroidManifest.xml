<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gemapps.rxpicapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".PicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/PicApp">
        <activity
            android:name=".ui.home.HomePicturesActivity"
            android:exported="true">
        </activity>

        <activity-alias
            android:name=".Launcher"
            android:targetActivity=".ui.home.HomePicturesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".ui.search.SearchActivity"
            android:launchMode="singleTop"
            android:theme="@style/PicApp.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>